# -*- sh -*-
# This is an Electric Commander script which is mostly like Shell but allows
# certain non-Shell constructs like $[buildDir].

cd $[buildDir]
CastleToolsDir=/home/epd/srcref/CastleTools
export PATH=$CastleToolsDir/bin:$PATH

components cache /scratch/components-cache

# This component doesn't honor the set-location mechanism, so restore the
# default location.
components set-location RivieraLpmService

make DONT_UPDATE_CASTLETOOLS=1
