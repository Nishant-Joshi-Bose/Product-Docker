<ShepherdConfig>

  <daemon name="ProductController"
          recovery="reboot"/>

  <daemon name="avahi-daemon"
          exe="start-avahi"/>

  <daemon name="IoT"/>

  <daemon name="CAPS"
          recovery="reboot">
    <arg>-c/opt/Bose/etc/CAPS.xml</arg>
  </daemon>

  <daemon name="AirPlay2" cpuset="6"/>
  <daemon name="Amazon"/>
  <daemon name="AudioNotification"/>
  <daemon name="BMX"/>
  <daemon name="Deezer"/>
  <daemon name="IHeart"/>
  <daemon name="SiriusXM"/>
  <daemon name="Spotify"/>
  <daemon name="Upnp"/>

  <daemon name="PtsServer">
    <arg>/opt/Bose/etc/pts-handler</arg>
    <arg>--static=/opt/Bose/etc/static-content-map.txt</arg>
  </daemon>

</ShepherdConfig>
