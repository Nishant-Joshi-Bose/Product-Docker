<ShepherdConfig>
  <daemon name="Eddie"/>

  <daemon name="LPMService"/>

  <daemon name="avahi-daemon"
          exe="start-avahi"/>

  <daemon name="NetManager"
          recovery="reboot"/>

  <daemon name="CLIServer"/>

  <daemon name="IoT"/>

  <daemon name="UpnpSource">
    <arg>-c/opt/Bose/etc/UpnpSource.xml</arg>
  </daemon>

  <daemon name="FrontDoor"/>

  <daemon name="WebServer">
    <arg>--disable-setup-port</arg>
    <arg>-c/opt/Bose/etc/WebServer.xml</arg>
  </daemon>

  <daemon name="BoseApp"
          recovery="reboot">
    <arg>-c/opt/Bose/etc/BoseApp.xml</arg>
  </daemon>

  <daemon name="STSCertified"/>

  <!-- The Bluetooth daemon depends on the btproperty daemon -->
  <daemon name="btproperty"/>

  <daemon name="Bluetooth"/>

  <daemon name="PtsServer">
    <arg>/opt/Bose/etc/pts-handler</arg>
  </daemon>

</ShepherdConfig>
