<ShepherdConfig>
  <daemon name="Eddie"/>

  <daemon name="LPMService"/>

  <!-- The LPMUpdater will ultimately be consumed and launched by
       CastleSoftwareUpdate.  But since that team did not want to
       integrate/consume us for DP1/IP1 due to too little time to integrate
       the LpmUpdater must spawn on its own and perform an update if need be.
       Launching the LpmUpdater using Shepherd is just a temporary solution to
       meet the IP1/DP1 requirements.  The LPMUpdater exits if either (1) the
       LPM is already up to date or(2) the software installed on the LPM is
       old and doesnâ€™t support the update over IPC.  -->
  <daemon name="LPMUpdater"
          recovery="ignore">
    <arg>/opt/Bose/etc/</arg>
  </daemon>

  <daemon name="avahi-daemon"
          exe="start-avahi"/>

  <daemon name="NetManager"
          recovery="reboot"/>

  <daemon name="CLIServer"/>

  <daemon name="IoT"/>

  <daemon name="APServer"
          recovery="reboot"
          nice="-6">
    <arg>-c</arg>
    <arg>/opt/Bose/etc/APConfig.xml</arg>
  </daemon>

  <daemon name="UpnpSource">
    <arg>-c/opt/Bose/etc/UpnpSource.xml</arg>
  </daemon>

  <daemon name="FrontDoor"/>

  <daemon name="WebServer">
    <arg>-c/opt/Bose/etc/WebServer.xml</arg>
  </daemon>

  <daemon name="BoseApp"
          recovery="reboot">
    <arg>-c/opt/Bose/etc/BoseApp.xml</arg>
  </daemon>

  <daemon name="STSCertified"/>

  <daemon name="Bluetooth"/>

</ShepherdConfig>
