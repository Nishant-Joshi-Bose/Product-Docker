<ShepherdConfig>
  <daemon name="Professor"/>

  <daemon name="avahi-daemon"
          exe="start-avahi"/>

  <daemon name="A4VVideoManagerService"/>

  <daemon name="A4VRemoteCommunicationService"/>

  <daemon name="A4VQuickSetService"/>

  <daemon name="IoT"/>

  <daemon name="UpnpSource">
    <arg>-c/opt/Bose/etc/UpnpSource.xml</arg>
  </daemon>

  <daemon name="BoseApp"
          recovery="reboot">
    <arg>-c/opt/Bose/etc/BoseApp.xml</arg>
  </daemon>

  <daemon name="STSCertified">
    <!-- Workaround for CASTLE-9311: "libuuid.so missing from Riviera-HSP 2.4" -->
    <env>LD_LIBRARY_PATH=/opt/Bose/lib</env>
  </daemon>

  <daemon name="PtsServer">
    <arg>/opt/Bose/etc/pts-handler</arg>
  </daemon>

  <daemon name="Monaco"/>

</ShepherdConfig>
