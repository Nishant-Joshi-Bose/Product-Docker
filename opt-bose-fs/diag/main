#!/usr/bin/python2.7
#
# Invoked via pts-handler to display pages related to diagnostics.
#
import os
import sys
import re
import json

if len(sys.argv) != 1:
    raise Exception("wrong usage " + str(sys.argv))

def html_escape(text):
    return re.sub(r'[<&>]', lambda x: { "<": "&lt;",
                                        "&": "&amp;",
                                        ">": "&gt;" }[x.group(0)], text)

print """\
HTTP/1.1 200 OK\r
Content-Type: text/html\r
Cache-Control: no-cache\r
\r"""

print """
<html>
<head>
<title>Diagnostics</title>
<style type="text/css">
 body {
   font-family: Verdana, Arial, Helvetica, sans-serif;
 }
 hr {
   border: 1px solid blue;
   color: #fff;
   background-color: #fff;
   height: 1px;
   width: 100%;
 }
 div.box {
   background-color: lightgrey;
   border: thin dotted;
   padding: 1em;
   margin: 1em;
 }
 td.showimg {
   padding: 8px;
 }
</style>
</head>
<body>
<h1>Diagnostics</h1>
<hr>
"""

version_info = json.load(open("/opt/Bose/etc/BoseVersion.json"))
print "<li>Software Version"
print """<div class="box">"""
print html_escape(version_info["long"])
print "</div>"

print "<li>Manufacturing Data [<a href='/diag/mfg-data'>all</a>]"
mfg_data = json.load(open("/persist/mfg_data.json"))
print """<div class="box">"""
print "<table>"
for elem in """country_code regionCode snSystem productType productName
               productColor testflagLaunchAssurance""".split():
    print "<tr><td>{}</td><td>{}</td></tr>" \
        .format(elem, html_escape(mfg_data.get(elem, "(none)")))
print "</table>"
print "</div>"

print "<li>Display Tests"
print """<div class="box">"""
print "<table>"
print "<tr>"
for img in """left top bottom right""".split():
    print """<td class='showimg'>\
<img width='80' height='80' \
onclick='fetch("/diag/display/colorbars-{img}.png?show")' \
src='/diag/display/colorbars-{img}.png'>\
</td>""".format(img=img)
print "</tr>"
print "</table>"
print "</div>"

print "<hr>"

print "Remote:", os.environ.get("REMOTE_ADDRESS", "(oops)")

print """
</body>
</html>
"""
